this.selectedOptionName[this.selectedVoteType] = this.options.find(option => option.id === this.selectedOption).name;\n        })\n        .catch(error => console.error('Error submitting vote:', error));\n    }\n  }\n};\n</script>\n\n\n\n\n<style scoped>\n.vote-form {\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  margin-bottom: 20px;\n}\n\n.vote-select {\n  margin-bottom: 10px;\n  width: 200px;\n  padding: 8px;\n  font-size: 16px;\n}\n\n.vote-button {\n  background-color: #007bff;\n  color: #fff;\n  border: none;\n  padding: 10px 20px;\n  cursor: pointer;\n  font-size: 16px;\n}\n\n.vote-button:disabled {\n  background-color: #ccc;\n  cursor: not-allowed;\n}\n\nselect:disabled {\n  background-color: #f0f0f0;\n}\n</style>"],"mappings":"AAmBA,OAAOA,KAAI,MAAO,OAAO;AAEzB,eAAe;EACbC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,gBAAgB,EAAE,EAAE;MACpBC,cAAc,EAAE,EAAE;MAClBC,kBAAkB,EAAE,EAAE;MACtBC,oBAAoB,EAAE,EAAE;MACxBC,kBAAkB,EAAE;QAClBC,OAAO,EAAE,EAAE;QACXC,MAAM,EAAE,EAAE;QACVC,OAAO,EAAE;MACX,CAAC;MACDC,QAAQ,EAAE;QACRH,OAAO,EAAE,KAAK;QACdC,MAAM,EAAE,KAAK;QACbC,OAAO,EAAE;MACX,CAAC;MACDE,WAAW,EAAE;QACXJ,OAAO,EAAE,cAAc;QACvBC,MAAM,EAAE,aAAa;QACrBC,OAAO,EAAE;MACX,CAAC;MACDG,OAAO,EAAE;IACX,CAAC;EACH,CAAC;EACDC,KAAK,EAAE;IACL,oBAAoB,EAAE;MACpBC,SAAS,EAAE,IAAI;MACfC,OAAOA,CAACC,OAAO,EAAE;QACf,IAAI,CAACd,gBAAe,GAAIc,OAAO;QAC/B,IAAI,CAACC,YAAY,CAAC,CAAC;MACrB;IACF;EACF,CAAC;EACDC,OAAO,EAAE;IACPD,YAAYA,CAAA,EAAG;MACbjB,KAAK,CAACmB,GAAG,CAAE,cAAa,IAAI,CAACjB,gBAAiB,EAAC,EAC5CkB,IAAI,CAACC,QAAO,IAAK;QAChB,IAAI,CAACT,OAAM,GAAIS,QAAQ,CAACpB,IAAI,CAACW,OAAO;MACtC,CAAC,EACAU,KAAK,CAACC,KAAI,IAAKC,OAAO,CAACD,KAAK,CAAC,yBAAyB,EAAEA,KAAK,CAAC,CAAC;IACpE,CAAC;IACDE,UAAUA,CAAA,EAAG;MACX,MAAMC,QAAO,GAAI;QACfvB,cAAc,EAAE,IAAI,CAACA;MACvB,CAAC;MACDH,KAAK,CAAC2B,IAAI,CAAE,cAAa,IAAI,CAACzB,gBAAiB,EAAC,EAAEwB,QAAQ,EACvDN,IAAI,CAAC,MAAM;QACV,IAAI,CAACV,QAAQ,CAAC,IAAI,CAACR,gBAAgB,IAAI,IAAI;QAC3C,IAAI,CAACI,kBAAkB,CAAC,IAAI,CAACJ,gBAAgB,IAAI,IAAI,CAACU,OAAO,CAACgB,IAAI,CAACC,MAAK,IAAKA,